<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical"
    tools:context="com.example.koala.counter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#4caf50"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:fontFamily="sans-serif-medium"
            android:textSize="24sp"
            android:text="Madrid, Estadio Santiago BernabÃ©u"
            android:background="#4caf50"
            android:gravity="center_vertical|center_horizontal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="48sp"
                android:textColor="#fff"
                android:background="#4caf50"
                android:fontFamily="sans-serif-light"
                android:text="0"
                android:id="@+id/team_a_score"
                android:layout_weight="1"
                android:gravity="right" />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="#4caf50"
                android:text=":" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="48sp"
                android:background="#4caf50"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="0"
                android:id="@+id/team_b_score"
                android:layout_weight="1"
                android:gravity="left" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Real Madrid"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#4caf50"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:text="FC Barcelona"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#4caf50"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:orientation="horizontal"
        android:background="#ffffff">


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="addGoalForTeamA"
            android:textColor="#ffffff"
            android:layout_margin="8dp"
            android:background="#675042"
            android:text="Goal" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:textAllCaps="true"
            android:textColor="#333"
            android:text="Statistics"
            android:gravity="center_vertical|center_horizontal" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#675042"
            android:onClick="addGoalForTeamB"
            android:text="Goal" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff">

        <Button
            android:layout_width="0dp"
            android:layout_weight="2.3"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:onClick="addFaultForTeamA"
            android:background="#675042"
            android:text="Faults" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:textColor="#333"
            android:text="0"
            android:id="@+id/team_a_fault"
            android:gravity="center_vertical|center_horizontal" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#333"
            android:text="0"
            android:id="@+id/team_b_fault"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="2.3"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:background="#675042"
            android:onClick="addFaultForTeamB"
            android:text="Faults" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <Button
            android:layout_weight="2.3"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:onClick="addShotsForTeamA"
            android:textColor="#fff"
            android:background="#675042"
            android:text="Shots" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:textSize="24sp"
            android:textColor="#333"
            android:text="0"
            android:id="@+id/team_a_shots"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#333"
            android:text="0"
            android:id="@+id/team_b_shots"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_weight="2.3"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:onClick="addShotsForTeamB"
            android:textColor="#ffffff"
            android:background="#675042"
            android:text="Shots" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <Button
            android:layout_weight="2.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="addCornersForTeamA"
            android:layout_margin="8dp"
            android:textColor="#fff"
            android:background="#675042"
            android:text="Corners" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="8dp"
            android:textSize="24sp"
            android:textColor="#333333"
            android:text="0"
            android:id="@+id/team_a_corners"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="8dp"
            android:textSize="24sp"
            android:textColor="#333333"
            android:text="0"
            android:id="@+id/team_b_corners"/>

        <Button
            android:layout_weight="2.3"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:onClick="addCornersForTeamB"
            android:textColor="#ffffff"
            android:background="#675042"
            android:text="Corners" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="resetScore"
            android:background="#4caf50"
            android:text="reset"
            android:layout_margin="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>

